#!/bin/sh

buildinfo="@BUILDINFO@"
prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=${prefix}
exec_prefix_set=no

usage="\
Usage: broccoli-config [--build] [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--libs] [--cflags] [--config]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --build)
      echo $buildinfo
      ;;
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo @VERSION@
      ;;
    --cflags)
      if test $prefix/include != /usr/include ; then
        includes=-I$prefix/include
      fi
      echo $includes -I$prefix/include @BRO_CFLAGSADD@ -DBROCCOLI 
      ;;
    --libs)
      libdirs=-L@INSTALL_LIB_DIR@
      echo $libdirs -lbroccoli @BRO_LIBADD@
      ;;
    --config)
      echo @BRO_SYSCONF_FILE@
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done

exit 0
